<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/tv_team_a"
                android:textColor="#616161"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingBottom="24dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="56sp" />

            <Button
                android:id="@+id/goal_teamA"
                android:onClick="addGoalForTeamA"
                style="@style/customButtonStyleGoalTeamA"
                android:text="@string/bt_goal_team_a" />

            <TextView
                android:id="@+id/card_red_teamA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingBottom="24dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="56sp" />

            <Button
                style="@style/customButtonStyleCardRedTeamA"
                android:backgroundTint="@android:color/holo_red_light"
                android:elevation="0dp"
                android:onClick="addCardRedForTeamA"
                android:text="@string/bt_card_red_team_a" />

            <TextView
                android:id="@+id/card_yellow_teamA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingBottom="24dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="56sp" />

            <Button
                style="@style/customButtonStyleCardYellowTeamA"
                android:backgroundTint="@android:color/holo_orange_light"
                android:onClick="addCardYellowForTeamA"
                android:text="@string/bt_card_yellow_team_a" />


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/tv_team_b"
                android:textColor="#616161"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingBottom="24dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="56sp" />

            <Button
                style="@style/customButtonStyleGoalTeamB"
                android:onClick="addGoalForTeamB"
                android:text="@string/bt_goal_team_b" />

            <TextView
                android:id="@+id/card_red_teamB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingBottom="24dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="56sp" />

            <Button
                style="@style/customButtonStyleCardRedTeamB"
                android:backgroundTint="@android:color/holo_red_light"
                android:onClick="addCardRedForTeamB"
                android:text="@string/bt_card_red_team_b" />

            <TextView
                android:id="@+id/card_yellow_teamB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingBottom="24dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="56sp" />

            <Button
                style="@style/customButtonStyleCardYellowTeamB"
                android:backgroundTint="@android:color/holo_orange_light"
                android:onClick="addCardYellowTeamB"
                android:text="@string/bt_card_yellow_team_b" />


        </LinearLayout>
    </LinearLayout>

    <Button
        style="@style/customButtonStyleReset"
        android:onClick="resetScore"
        android:text="@string/bt_reset" />

</RelativeLayout>